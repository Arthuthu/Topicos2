<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />

@{
    ViewBag.Title = "Pizzas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pizzas = ViewBag.Pizzas;
}

<br />
<div class="row justify-content-center text-center">
    <div class="col-md-3 fw-bold">
        <h4>
            <img src="~/Content/imagens/Pizzas/3Queijos.jpg" />
            4Queijos
        </h4>
    </div>
    <div class="col-md-3 fw-bold text-center">
        <h4>
            <img src="~/Content/imagens/Pizzas/Calabresa.jpg" />
            Calabresa
        </h4>
    </div>
    <div class="col-md-3 fw-bold text-center">
        <h4>
            <img src="~/Content/imagens/Pizzas/Fran com requeijão.jpg" />
            Frango com Queijo
        </h4>
    </div>
    <div class="col-md-3 fw-bold text-center">
        <h4>
            <img src="~/Content/imagens/Pizzas/brigadeiro.jpg" />
            Brigadeiro
        </h4>
    </div>
    <div class="col-md-3 fw-bold text-center">
        <h4>
            <img src="~/Content/imagens/Pizzas/Pepperoni.jpg" />
            Pepperoni
        </h4>
    </div>
    <div class="col-md-3 fw-bold text-center">
        <h4>
            <img src="~/Content/imagens/Pizzas/Napolitana.jpg" />
            Napolitana
        </h4>
    </div>
    <div class="col-md-3 fw-bold text-center">
        <h4>
            <img src="~/Content/imagens/Pizzas/Presunto.jpg" />
            Presunto
        </h4>
    </div>
    <div class="col-md-3 fw-bold text-center">
        <h4>
            <img src="~/Content/imagens/Pizzas/Catuperoni.jpg" />
            Catuperoni
        </h4>
    </div>
</div>
<br />
<br />

<div class="row text-center">
    <div>
        <ul class="list-group list-group-horizontal fw-bold justify-content-center">
            <li class="list-group-item col-md-2 border-dark">@Html.ActionLink("Nome", "Pizzas", new { ordem = 0 })</li>
            <li class="list-group-item col-md-2 border-dark">@Html.ActionLink("Tipo", "Pizzas", new { ordem = 1 })</li>
            <li class="list-group-item col-md-2 border-dark">@Html.ActionLink("Valor", "Pizzas", new { ordem = 2 })</li>
        </ul>
    </div>
</div>
<br/>

<div class="row">
    <div>
        <ul class="list-group list-group-horizontal fw-bold border border-dark">
            <li class="list-group-item col-md-3">Nome</li>
            <li class="list-group-item col-md-1">Tipo</li>
            <li class="list-group-item col-md-3">Descrição</li>
            <li class="list-group-item col-md-2">Valor</li>
            <li class="list-group-item col-md-3 text-center">Funcionalidades</li>
        </ul>
    </div>
    <div class="col-md-12">
        @foreach (var p in pizzas)
        {
            <ul class="list-group list-group-horizontal">
                <li class="list-group-item col-md-3 d-flex align-items-center">@p.Nome</li>
                <li class="list-group-item col-md-1 d-flex align-items-center">@p.TipoNome</li>
                <li class="list-group-item col-md-3 d-flex align-items-center">@p.Descricao</li>
                <li class="list-group-item col-md-2 d-flex align-items-center">R$@p.Valor</li>
                <li class="list-group-item col-md-1 text-center fw-bold d-flex align-items-center p-0"><a class="listaButton" href="/Pizza/PizzaDetalhes/@p.Id">Detalhes</a></li>
                <li class="list-group-item col-md-1 text-center fw-bold d-flex align-items-center p-0"><a class="listaButtonDeletar" href="/Pizza/DeletarPizza/@p.Id">Deletar</a></li>
                <li class="list-group-item col-md-1 text-center fw-bold d-flex align-items-center p-0"><a class="listaButton" href="/Pizza/AtualizarPizza/@p.Id">Atualizar</a></li>
            </ul>
        }
    <br/>
    <div>
        <ul class="list-group list-group-horizontal">
            <li class="list-group-item col-md-1 text-center fw-bold"><a href="/Pizza/CriarPizza">Criar</a></li>
        </ul>
    </div>

    </div>
</div>